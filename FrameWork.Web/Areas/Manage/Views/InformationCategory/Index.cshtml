@model List<tbl_sys_infomationcategory>
@using FrameWork.Model;
@{
    ViewBag.Title = "资讯类型管理";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" placeholder="名称" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary">搜索</button>
            </form>
            <form class="navbar-form navbar-right" >
            <div class="form-group">
                <button type="button" class="btn btn-success" onclick="window.location.href='@Url.Action("Add","InformationCategory")'">新增</button>
            </div>
            </form>
        </div>
     
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th style="width:75px">编号</th>
                    <th class="text-center">类型名称</th>
                    <th style="width:120px">创建时间</th>
                    <th style="width:80px" class="text-center"></th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.id</td>
                        <td>@category.name</td>
                        <td>@category.createdate.Value.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <input type="button" class="btn btn-default" value="修改" onclick="window.location.href='@Url.Action("Edit","InformationCategory",new { id= category.id })'"/>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

